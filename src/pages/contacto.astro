---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main class="font-display">
        <div class="min-h-screen w-full">
            <header
                class="flex items-center justify-between border-b border-primary/40 px-6 py-4 backdrop-blur-md bg-darkPanel/40 shadow-neon"
            >
                <div class="flex items-center gap-4">
                    <div class="text-primary size-7 drop-shadow-neon">
                        <span class="material-symbols-outlined text-4xl"
                            >radio_button_checked</span
                        >
                    </div>

                    <h2
                        class="text-xl font-bold tracking-wide drop-shadow-neon"
                    >
                        Portafolio de evidencias
                    </h2>
                </div>

                <nav>
                    <a href={`${import.meta.env.BASE_URL}`}>Inicio</a>
                    <a href={`${import.meta.env.BASE_URL}habilidades`}
                        >Habilidades</a
                    >
                    <a href={`${import.meta.env.BASE_URL}proyectos`}
                        >Proyectos</a
                    >
                    <a href={`${import.meta.env.BASE_URL}contact`}>Contacto</a>
                </nav>

                <button class="md:hidden text-gray-100">
                    <span class="material-symbols-outlined">menu</span>
                </button>
            </header>

            <section
                class="mt-10 flex flex-col items-center justify-center gap-4 p-8 rounded-xl text-center border border-primary/40 bg-darkPanel/60 shadow-neon"
                style='background-image: linear-gradient(rgba(0,0,0,0.5), rgba(10,0,16,0.9)), url("/dark-neon-red-and-teal-40d4u8kcwxp11ijp.jpg"); background-size: cover;'
            >
                <h1
                    class="text-6xl font-black text-primary drop-shadow-[0_0_20px_#f20df2] glitch"
                    data-text="Contacto"
                >
                    Contactame
                </h1>

                <p class="max-w-2xl text-gray-300 mt-4">
                    ¿Quieres saber de mi?, escribeme, te prometo que
                    probablemente vea tu mensaje. :3
                </p>
            </section>

            <section class="mt-16 max-w-xl mx-auto hud-frame relative">
                <div class="hud-scan"></div>

                <h2
                    class="text-3xl font-bold text-center mb-6 drop-shadow-neon"
                >
                    Envíame un mensaje
                </h2>

                <form class="flex flex-col gap-4">
                    <input
                        type="text"
                        placeholder="Tu nombre"
                        class="bg-darkPanel/60 border border-primary/40 p-3 rounded-lg text-white focus:ring-primary focus:outline-none"
                    />

                    <input
                        type="email"
                        placeholder="Correo electrónico"
                        class="bg-darkPanel/60 border border-primary/40 p-3 rounded-lg text-white focus:ring-primary focus:outline-none"
                    />

                    <textarea
                        placeholder="Tu mensaje..."
                        rows="5"
                        class="bg-darkPanel/60 border border-primary/40 p-3 rounded-lg text-white focus:ring-primary focus:outline-none"
                    ></textarea>

                    <button
                        class="px-8 py-3 bg-primary text-white font-bold rounded-lg shadow-neon hover:scale-110 transition"
                        type="submit"
                    >
                        Enviar mensaje
                    </button>
                </form>
            </section>

            <footer class="mt-20 border-t border-primary/40 py-10 text-center">
                <div class="flex justify-center gap-6 mb-4"></div>

                <p class="text-gray-500 text-sm mt-4">
                    © 2025 JessArt2002. Todos los derechos reservados.
                </p>
            </footer>
        </div>
    </main>
</Layout>
